package testing;

import java.util.concurrent.TimeUnit;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.WebDriverWait;

/**
 *
 * @author Arsenix
 */

public class Testing {
    
    WebDriver driver;
    WebDriverWait wait;
    
    
    public void Entrega4NewDirectorio(){
        System.setProperty("webdriver.chrome.driver","/Users/Arsenix/Documents/Chrome/chromedriver");
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
        driver.manage().timeouts().pageLoadTimeout(30, TimeUnit.SECONDS);
        wait = new WebDriverWait (driver,2);
        driver.get("https://lit-mountain-13721.herokuapp.com/");
        NewDirectorio();
    
    }
    public void Entrega4Destroy(){
        System.setProperty("webdriver.chrome.driver","/Users/Arsenix/Documents/Chrome/chromedriver");
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
        driver.manage().timeouts().pageLoadTimeout(30, TimeUnit.SECONDS);
        wait = new WebDriverWait (driver,2);
        driver.get("https://lit-mountain-13721.herokuapp.com/");
        Destroy();
    
    }
    
    public void Entrega4Edit(){
        System.setProperty("webdriver.chrome.driver","/Users/Arsenix/Documents/Chrome/chromedriver");
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
        driver.manage().timeouts().pageLoadTimeout(30, TimeUnit.SECONDS);
        wait = new WebDriverWait (driver,2);
        driver.get("https://lit-mountain-13721.herokuapp.com/");
        Edit();
    
    }
    
    public void Entrega4Show(){
        System.setProperty("webdriver.chrome.driver","/Users/Arsenix/Documents/Chrome/chromedriver");
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
        driver.manage().timeouts().pageLoadTimeout(30, TimeUnit.SECONDS);
        wait = new WebDriverWait (driver,2);
        driver.get("https://lit-mountain-13721.herokuapp.com/");
        Show();
    
    }
    public void Entrega4DestroyNoConfirmed(){
        System.setProperty("webdriver.chrome.driver","/Users/Arsenix/Documents/Chrome/chromedriver");
        driver = new ChromeDriver();
        driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
        driver.manage().timeouts().pageLoadTimeout(30, TimeUnit.SECONDS);
        wait = new WebDriverWait (driver,2);
        driver.get("https://lit-mountain-13721.herokuapp.com/");
        DestroyNoConfirmed();
    
    }
   
    void NewDirectorio(){
        driver.findElement(By.xpath("/html/body/table/tbody/tr[1]/td[5]/a")).click(); 
        wait = new WebDriverWait (driver,2);
    }
    void Destroy(){
        driver.findElement(By.xpath("/html/body/table/tbody/tr[2]/td[7]/a")).click(); 
        wait = new WebDriverWait (driver,2);
         
    }
    void Edit(){
      driver.findElement(By.xpath("/html/body/table/tbody/tr[1]/td[6]/a")).click(); 
      driver.findElement(By.xpath("/html/body/form/div[1]")).sendKeys("Joaquin");
      driver.findElement(By.xpath("/html/body/form/div[5]/input")).click();
      wait = new WebDriverWait (driver,2);  
    }
    
    void Show(){
        driver.findElement(By.xpath("/html/body/table/tbody/tr[1]/td[5]/a")).click();
        driver.findElement(By.xpath("/html/body/a[2]")).click();
    }
    void DestroyNoConfirmed(){
        driver.findElement(By.xpath("/html/body/table/tbody/tr[2]/td[7]/a")).click();
        driver.findElement(By.xpath("")).click(); #No es posible acceder al elemento.
        wait = new WebDriverWait (driver,2);
         
    }
    
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Testing navegador = new Testing(); 
        navegador.Entrega4NewDirectorio();
        navegador.Entrega4Destroy();
        navegador.Entrega4Edit();
        navegador.Entrega4Show();
        navegador.Entrega4DestroyNoConfirmed();
        

    }
    
}

